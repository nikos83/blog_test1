<p class="text-success"><%= notice %></p>
<div class="card shadow-sm">
  <div class="card-body">
    <h2 class="card-title"><%= @post.title %></h2>
    <p class="card-text"><%= @post.content %></p>
  </div>
</div>
<div class="my-4 d-flex gap-2">
  <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-warning d-inline" %>
  <%= link_to "Back to posts", posts_path, class: "btn btn-secondary d-inline" %>
  <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger d-inline" %>
</div>
