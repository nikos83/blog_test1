<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>
  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>
  <% if post.cover_image.attached? %>
    <%= image_tag post.cover_image %>
  <% else %>
    <p>No cover image uploaded</p>
  <% end %>
</div>
